html
   head
      title File Upload System
      link(rel="styleSheet" href="/libs/bootstrap.css")
   body(ng-app="app" ng-controller="pageController")
   .navbar.navbar-inverse
      .navbar-header
         button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-inverse-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
         a.navbar-brand(href='#') File Upload System
      .navbar-collapse.collapse.navbar-inverse-collapse
         ul.nav.navbar-nav
            li.active
               a(href='#') Active
            li
               a(href='#') Link
            if currentUser
                li
                    a(href="/#/upload") Upload
            li.dropdown
               a.dropdown-toggle(href='#', data-toggle='dropdown')
                  | Dropdown
                  b.caret
               ul.dropdown-menu
                  li
                     a(href='#') Action
                  li
                     a(href='#') Another action
                  li
                     a(href='#') Something else here
                  li.divider
                  li.dropdown-header Dropdown header
                  li
                     a(href='#') Separated link
                  li
                     a(href='#') One more separated link
         form.navbar-form.navbar-left
            input.form-control.col-lg-8(type='text', placeholder='Search')
         ul.nav.navbar-nav.navbar-right
            li(ng-hide="!!currentUser.getUser()")
                a(href='/#/login') Login
            li(ng-hide="!!currentUser.getUser()")
                a(href='/#/register') Register
            li.dropdown(ng-show="!!currentUser.getUser()")
                a.dropdown-toggle(href='#' data-toggle='dropdown') {{currentUser.getUser()}}
                    b.caret
                ul.dropdown-menu
                    li
                        a(href='#/upload') Upload
                    li
                        a(href='#') Another action
                    li
                        a(href='#') Something else here
                    li.divider
                    li
                        a(href='#') Separated link
            li(ng-show="!!currentUser.getUser()" ng-controller="userController")
                a(href='#' ng-click="logout()") Logout

   div(ng-view)

   footer.text-center &copy; File Upload System {{year}}

   script(type="text/javascript" src="/libs/jquery.js")
   script(type="text/javascript" src="/libs/bootstrap.js")
   script(type="text/javascript" src="/libs/angular.js")
   script(type="text/javascript" src="/libs/angular-route.js")
   script(type="text/javascript" src="/libs/angular-resource.js")
   script(type="text/javascript" src="/libs/angular-cookies.js")
   script(type="text/javascript" src="/app/app.js")
   script(type="text/javascript" src="/app/services/currentUser.js")
   script(type="text/javascript" src="/app/controllers/pageController.js")
   script(type="text/javascript" src="/app/controllers/userController.js")